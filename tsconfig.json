{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src/",
    "paths": {
      "@core": ["core/index.ts"]
    },
    "pretty": true,
    "removeComments": true,
    "outDir": "build"
  }
}
