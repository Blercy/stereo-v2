// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Settings {
  id   String @id
  data String @default("{}")

  @@map("settings")
}

model User {
  id        String @id
  commands  Int    @default(0)
  songs     Int    @default(0)
  playlists Json[]

  @@map("user")
}
